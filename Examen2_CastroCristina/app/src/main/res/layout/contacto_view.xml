<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/btn_icon"
        android:layout_width="wrap_content"
        android:background="@drawable/icon"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacto_nombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Marco Anotnio"
            android:textColor="#564E58"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contacto_compania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compania"
            android:textColor="#262525"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/botonEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/boton_eliminar"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:contentDescription="Eliminar" />

</LinearLayout>